{% if section.settings.background_image != blank %}
<div class="custom-banner-section lazyloaded"
  style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
  <div class="width-container">
    <div class="custom-content">
      {% if section.settings.banner_heading != blank %}
      <div class="banner-heading">{{ section.settings.banner_heading }}</div>
      {% endif %}
      {% if section.settings.banner_main_heading != blank %}
      <div class="banner-main-heading">{{ section.settings.banner_main_heading }}</div>
      {% endif %}
      {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
  {% if section.settings.banner_image != blank %}
  <div class="custom-banner-img">
    <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="banner-img" class="banner-img lazyloaded">
  </div>
  {% endif %}
</div>
{% endif %}
{% schema %}
{
"name": "Custom Banner Section",
"settings": [
{
"type": "image_picker",
"id": "background_image",
"label": "Background Image"
},
{
"type": "text",
"id": "banner_heading",
"label": "Banner Heading"
},
{
"type": "text",
"id": "banner_main_heading",
"label": "Main Heading"
},
{
"type": "text",
"id": "button_text",
"label": "Button Text"
},
{
"type": "url",
"id": "button_link",
"label": "Button Link"
},
{
"type": "image_picker",
"id": "banner_image",
"label": "Banner Image"
}
],
"presets": [
{
"name": "Custom Banner Section",
"category": "Custom"
}
]
}
{% endschema %}