<div class="position-relative">
    <div class="width-container">
        <div class="jewelry-section">
            <div class="imgcenter">
            {% if section.settings.center_image != blank %}
                <img src="{{ section.settings.center_image | img_url: 'large' }}" alt="Center Image" class="w-full lazyload" loading="lazy">
            {% endif %}
            </div>
            <div class="jewelry-right">
                <div class="small-title">
                {{ section.settings.small_title }}
                </div>
                <div class="jewelry-title">
                {{ section.settings.main_title }}
                </div>
                <div class="jewelry-description">
                {{ section.settings.description }}
                </div>
                <a href="{{ section.settings.button_link }}" class="jewelry-button">
                {{ section.settings.button_text }}
                </a>
            </div>
        </div>
    </div>
    {% if section.settings.left_bg_pattern != blank %}
        <div class="jewelry-bgleft">
            <img src="{{ section.settings.left_bg_pattern | img_url: 'large' }}" alt="Center Image" class="w-full lazyload" loading="lazy">
        </div>
    {% endif %}

</div>
<!-- Jewelry Section -->
{% comment %} <div class="container">
  <div class="jewelry-section">
    <!-- Left Side with Background Pattern -->
    {% if section.settings.left_bg_pattern != blank %}<div class="jewelry-left"></div>{% endif %}

    <!-- Image in the middle, spanning between left and right -->
    <div class="jewelry-image-container">
        {% if section.settings.center_image != blank %}
            <img src="{{ section.settings.center_image | img_url: 'large' }}" alt="Center Image" class="center-image">
        {% endif %}
    </div>

    <!-- Right Side with Text Content -->
    <div class="jewelry-right">
      <!-- Small Title -->
      <div class="small-title">
        {{ section.settings.small_title }}
      </div>
      <!-- Main Title -->
      <div class="jewelry-title">
        {{ section.settings.main_title }}
      </div>
      <!-- Description -->
      <div class="jewelry-description">
        {{ section.settings.description }}
      </div>
      <!-- Button -->
      <a href="{{ section.settings.button_link }}" class="jewelry-button">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div> {% endcomment %}

<style>
.w-full{
    width: 100%;
    height: 100%;
}
.imgcenter{
    position: relative;
    z-index: 9;
    width: 50%;
    text-align: end;
}
.jewelry-bgleft{
    position: absolute;
    top: 0;
    left: 0;
    width: 35%;
    height: 100%;
}
.position-relative{
    position: relative;
}
.advance-img-text{
    background: #1D1D1D;
}
.container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 10px;
}
.jewelry-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* height: 500px; */
  position: relative;
  padding-top: 50px;
  padding-bottom: 50px;
}
.jewelry-left {
  width: 35%;
  height: 100%;
  background-image: url('{{ section.settings.left_bg_pattern | img_url: 'large' }}'); 
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
}
.jewelry-right {
  width: 50%;
  color: white;
  padding: 50px;
  position: relative;
  z-index: 1;
}

.jewelry-image-container {
  position: absolute;
  left: 50%; 
  transform: translateX(-50%);
  top: 50%;
  transform: translate(-50%, -50%);
  width: 60%; 
  z-index: 2;
}

.center-image {
  width: 60%; 
  height: auto;
  object-fit: contain;
}

.small-title {
    font-family: Poppins;
    font-size: 24px;
    font-weight: 500;
    line-height: 30.34px;
    letter-spacing: 0.68em;
    text-align: left;
    color: #CAA45D;
}

.jewelry-title {
    font-family: Poppins;
    font-size: 64px;
    font-weight: 600;
    line-height: 80.92px;
    text-align: left;
    color: #FFFFFF;
}

.jewelry-description {
    font-family: Poppins;
    font-size: 16px;
    font-weight: 400;
    line-height: 27px;
    text-align: left;
    color: #FFFFFF;
    margin-top: 10px;
    margin-bottom: 30px;
}

.jewelry-button {
    background-color: #f0c050;
    color: #000;
    padding: 10px 20px;
    text-decoration: none;
    font-family: Poppins;
    font-size: 18px;
    font-weight: 600;
    line-height: 27px;
    text-align: center;
}

.jewelry-button:hover {
  opacity: 0.8;
}

@media (max-width: 768px) {
    .jewelry-bgleft{
        height: 35%;
        width: 100%;
    }
    .jewelry-right,.imgcenter{
        width: 100%;
        padding: 0;
    }
    .jewelry-section {
        flex-wrap: wrap;
        gap: 50px;
    }
    .small-title{
        font-size: 16px;
    }
    .jewelry-title {
        font-size: 40px;
        line-height:50.57px;
    }
    .jewelry-description {
        font-size: 14px;
        line-height:21px;
    }
}
</style>

{% schema %}
{
  "name": "Advance image text",
  "class": "advance-img-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_bg_pattern",
      "label": "Left Background Pattern"
    },
    {
      "type": "image_picker",
      "id": "center_image",
      "label": "Center Image"
    },
    {
      "type": "text",
      "id": "small_title",
      "label": "Small Title",
      "default": "Design Video"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "Make Your Day Brighter."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Advance image text"
    }
  ]
}
{% endschema %}