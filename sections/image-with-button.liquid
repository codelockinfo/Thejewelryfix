{%- liquid
  assign sid = section.id
  assign img_ratio = section.settings.image_ratio 
  assign ck = false 
 if img_ratio == 'auto' 
  assign ck = true 
 endif
 assign image = section.settings.image
 assign url = section.settings.button_link 
 if section.settings.cl_txt == 'dark' 
  assign cl_txt = 'cd,cg' 
 else 
  assign cl_txt = 'cw,cw,button-o-w' 
 endif 
 assign cl_arr = cl_txt | split:"," -%}
  <div class="main-container">
{%- capture image_layout -%}
  <div class="nt_bg_lz backgroundimg lazyloadt4s item__position {{section.settings.img_background}}" 
         data-bg="{{ section.settings.new_background_image | img_url: 'master' }}" >
         </div>
        <div class="custom-container">
          <div class="col-12 col-md-6">
          <div class="nt_img_txt oh pr middle center">
          {%- comment -%}<a href="{{ url | default:'#' }}" class="db">{%- endcomment -%}
            {%- if image != blank -%}
              <div class="nt_bg_lz lazyloadt4s item__position {{section.settings.img_align}}" data-bgset="{{ image | img_url: '1x1' }}" data-sizes="auto" data-ratio="{{image.aspect_ratio}}" data-parent-fit="cover" style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%;"></div>
            {%- else -%}
              <div class="nt_bg_lz lazyloadt4s item__position {{section.settings.img_align}}" data-bg="https://placehold.jp/1/{% cycle 'a8dacc', '56cfe1', 'f99077','c8b09b' %}/fff/570x630.png?text=Image+with+text" style="padding-top: 111.1111111111111%;"></div>
            {%- endif -%}
       {%- comment -%}</a>{%- endcomment -%}
       </div>
    </div> 
 </div>

{%- endcapture -%}

  
<div class="backgorund nt_se_{{sid}} {{section.settings.layout}} txt_shadow_{{section.settings.use_shadow}}">
  <div class="row no-gutters equal_nt {{img_ratio}} al_center">
    {%- if section.settings.img_position == '1' -%}{{- image_layout -}}{%- endif -%}
    <div class="col-12 col-md-6 txt_col_img">
      <div class="flex column pl__20 pr__20 pb__20 pt__20 shadow_wrap {{section.settings.txt_align}} {{cl_arr[1]}}">
        <div class="subhead" style="font-family: Poppins; font-size: 24px; font-weight: 500; line-height: 30.34px; letter-spacing: 0.68em; text-align: left;color: #CAA45D;
">
          {{section.settings.designstudio}}
        </div>
        <div class="mb__20 font mt__0 fs__30 {{cl_arr[0]}} lh__1">
          {{section.settings.title}}
        </div>
        
        <div class="custom-class">{{ section.settings.text }}</div>
        
        <!-- Shop Now Button -->
        <a href="{{ section.settings.button_link }}" class="btn btn-primary mt__20" style="font-family: Poppins;
    font-size: 16px;
    padding: 12px 15px;
    width: 130px;
    height: 51px;
    background: #CAA45D;">
          SHOP NOW
        </a>
      </div>
    </div>
    {%- if section.settings.img_position == '2' -%}{{- image_layout -}}{%- endif -%}
  </div>
</div>
     </div> 

{%- render 'section_css' -%}

