
  <div
    class="custom-banner-section lazyloaded"
  >

    
    <div class="swiper bannerSwiper">
      <div class="swiper-wrapper">
          {% for block in section.blocks  offset:4 %}
          <div class="swiper-slide" style="
  background-image: url({{ block.settings.background_image | img_url: 'master' }}); 
  background-size: cover; 
  background-position: center; 
  width: 100%; 
  height: 100%;
">
      <div class=custom-banner-img >
      <div class="width-container">
      <div class="custom-content">
      
          <div class="banner-heading">{{ block.settings.banner_heading }}</div>
       
        
          <div class="banner-main-heading">{{ block.settings.banner_main_heading }}</div>
       
        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.button_link }}" class="banner-button">{{ block.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
 </div>
              </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>


    
     <div class="mainclass">
      <div class="custom-width-container">
        <div class="maindiv">
          {% for block in section.blocks limit:4 %}
            <div class="content-block">
              <div class="image-container">
                {% if block.settings.image != blank %}
                  <div class="image-box">
                    <img src="{{ block.settings.image | img_url: 'master' }}">
                  </div>
                {% else %}

                {% endif %}
              </div>
              <div class="text-container">
                <div class="custome-heading">{{ block.settings.title }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% schema %}
{
  "name": "Custom Banner Section2",
  "settings": [
   
  ],
  "blocks": [
    {
      "type": "image_text_block",
      "name": "Image and Text Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        },
        {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "backgroundmobile",
      "label": "Mobile background image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading"
    },
    {
      "type": "text",
      "id": "banner_main_heading",
      "label": "Main Heading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Banner Section2",
      "category": "Custom"
    }
  ]
}
{% endschema %}

