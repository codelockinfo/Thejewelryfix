<section class="custome_main_class">
  <div class="custom-container">
    <div class="heading-container">
      <div class="heading">{{ section.settings.title }}</div>
      <div class="test-arrowbox">
        <div class="swiper-button-prev-test">
          <i class="fa-solid fa-arrow-left-long button-prev"></i>
        </div>
        <div class="swiper-button-next-test">
          <i class="fa-solid fa-arrow-right-long button-next"></i> 
        </div>
      </div>
    </div>
    <div class="swiper-container swiper-testimonial">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="review-box">
            <div class="media">
              <div class="image">
                {%- render 'quote_3',rating:block.settings.rating -%}
                {% if block.settings.right_image !=blank %}
                  <img src="{{ block.settings.right_image | img_url: 'medium' }}" alt="{{ block.settings.name }}'s right image" draggable="false" class="right">
                {% endif %}
              </div>
              <div class="media-body">
                <div class="review-discription">{{ block.settings.content }}</div>
                <div class="review-text">{{ block.settings.name }}</div>
                <div class="subtitle">{{ block.settings.position }}</div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>





{% schema %}
{
  "name": "Custom testimonial",
  "class": "c-testimonial",
  "settings": [
      {
            "type": "text",
            "id": "title",
            "label": "Section Title"
        }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "position",
          "label": "Position"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Testimonial Content"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Image"
        },
        {
            "type": "range",
            "id": "rating",
            "min": 0,
            "max": 5,
            "step": 0.5,
            "label": "Rating",
            "info": "Set less than '1' to disable Rating.",
            "default": 5
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom testimonial ",
      "category": "Custom"
    }
  ]
}
{% endschema %}

             
